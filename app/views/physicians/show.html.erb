<p id="notice"><%= notice %></p>

<div>
<p>
  <h2><%= @physician.name %></h2>
</p>
<p>
  <h3>Specialty: 
  <%= @physician.specialty %></h3>
</p>
</div>

<h3>Office Locations</h3>

<div >
<table id="tables">

  <thead>
    <tr> <th>Street Address</th> <th>Zip Code</th> <th>Phone</th> </tr>
  </thead>

  <tbody>
    <% @physician.offices.each do |office| %>
      <tr>
        <td><%= office.street %></td>
        <td><%= office.zip %></td>
        <td><%= office.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<h3>Current Appointments</h3>

<div>
<table id="tables">

  <thead>
    <tr> <th>Patient</th> <th>Date of Appointment</th> </tr>
  </thead>

  <tbody>
    <% @physician.appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.visit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



